<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_character_info" />

    <com.project.rpg.widgets.SlidingTabLayout
        android:id="@+id/item_category_sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/item_list_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/item_category_sliding_layout"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_item"
        android:visibility="gone" />


</RelativeLayout>